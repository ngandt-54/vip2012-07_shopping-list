<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:background="#dddddd"
    android:layout_height="fill_parent" 
    android:orientation="vertical">
    
    <LinearLayout 
        android:id="@+id/add_new_btn"
        android:background="#dddddd"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/btn_create"
            android:layout_margin="4dp"
            android:textSize="16dp"
            android:background="@xml/my_btn_ics"
            android:gravity="center"
            android:text="@string/string_btn_create"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        
        <Button 
            android:id="@+id/btn_cancel"
            android:layout_margin="4dp"
            android:textSize="16dp"	
            android:text="@string/string_btn_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@xml/my_btn_ics"
            android:layout_weight="1"/>
        
    </LinearLayout>
    
    <TextView 
       android:layout_width="fill_parent"
       android:layout_height="2dp"
       android:background="#f8a750"/>
    
    <LinearLayout 
        android:id="@+id/add_new_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">
        
        <LinearLayout 
            android:id="@+id/layout_new_title"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            
            <TextView 
                android:id="@+id/label_new_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:layout_margin="4dp"
                android:text="@string/string_label_title"
                android:gravity="bottom"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#f8a750"/>
            <EditText 
                android:id="@+id/edit_new_title"
                android:layout_margin="4dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:padding="4dp"
                android:textSize="16dp"
                android:background="@xml/my_textfield_ics"/>
            
        </LinearLayout>
        
        <TextView 
	       android:layout_width="fill_parent"
	       android:layout_height="1dp"
       	   android:background="#878787"/>
        
        <LinearLayout 
            android:id="@+id/layout_new_priority"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            
            <TextView 
                android:id="@+id/label_new_priority"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:layout_margin="4dp"
                android:gravity="bottom"
                android:textStyle="bold"
                android:text="@string/string_label_priority"
                android:textSize="16dp"
                android:textColor="#f8a750"/>
            <EditText 
                android:id="@+id/edit_new_priority"
                android:layout_margin="4dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="16dp"
                android:padding="4dp"
                android:background="@xml/my_textfield_ics"/>
            
        </LinearLayout>
        
       <TextView 
	       android:layout_width="fill_parent"
	       android:layout_height="1dp"
       	   android:background="#878787"/>
       
        <LinearLayout 
            android:id="@+id/layout_new_quantity"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            
            <TextView 
                android:id="@+id/label_new_quantity"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:gravity="bottom"
                android:textStyle="bold"
                android:text="@string/string_label_quantity"
                android:textSize="16dp"
                android:textColor="#f8a750"/>
            <EditText 
                android:id="@+id/edit_new_quantity"
                android:layout_margin="4dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="16dp"
                android:inputType="number"
                android:padding="4dp"
                android:background="@xml/my_textfield_ics"/>
            <EditText 
                android:id="@+id/edit_new_money"
                android:layout_margin="4dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="16dp"
                android:padding="4dp"
                android:background="@xml/my_textfield_ics"/>
            
        </LinearLayout>
        
        <TextView 
	       android:layout_width="fill_parent"
	       android:layout_height="1dp"
       	   android:background="#878787"/>
        
        <LinearLayout 
            android:id="@+id/layout_new_price"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            
            <TextView 
                android:id="@+id/label_new_price"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:textStyle="bold"
                android:gravity="bottom"
                android:text="@string/string_label_price"
                android:textSize="16dp"
                android:textColor="#f8a750"/>
            <EditText 
                android:id="@+id/edit_new_price"
                android:layout_margin="4dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="16dp"
                android:inputType="number"
                android:padding="4dp"
                android:background="@xml/my_textfield_ics"/>
            
            <TextView 
                android:id="@+id/label_new_unit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:gravity="bottom"
                android:textStyle="bold"
                android:text="@string/string_label_unit"
                android:textSize="16dp"
                android:textColor="#f8a750"/>
            <Spinner 
                android:id="@+id/edit_new_unit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="16dp"
                android:padding="4dp"
                android:background="@xml/my_spinner_ics"/>
            
        </LinearLayout>
        
        <TextView 
	       android:layout_width="fill_parent"
	       android:layout_height="1dp"
       	   android:background="#878787"/>
        
        <LinearLayout 
            android:id="@+id/layout_more_option"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        	android:orientation="vertical"
        	android:textStyle="bold"
        	android:visibility="gone"
            >
            <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="48dp"
	            android:orientation="horizontal">
	            <TextView 
	                android:id="@+id/label_new_place"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:layout_margin="4dp"
	                android:gravity="bottom"
	                android:textStyle="bold"
	                android:text="@string/string_label_place"
	                android:textSize="16dp"
	                android:textColor="#f8a750"/>
	            <AutoCompleteTextView 
	                android:id="@+id/edit_new_place"
	                android:layout_margin="4dp"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:textSize="16dp"
	                android:padding="4dp"
	                android:background="@xml/my_textfield_ics"/>
	        </LinearLayout>
	        
            <TextView 
		       android:layout_width="fill_parent"
		       android:layout_height="1dp"
	       	   android:background="#878787"/>
        
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	        	android:orientation="horizontal"
	            >
	            <TextView 
	                android:id="@+id/label_new_place"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:layout_margin="4dp"
	                android:textStyle="bold"
	                android:gravity="bottom"
	                android:text="Due date"
	                android:textSize="16dp"
	                android:textColor="#f8a750"/>
	            <Button 
	                android:id="@+id/edit_new_place"
	                android:layout_margin="4dp"
	                android:text="Set Date"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:textSize="16dp"
	                android:padding="4dp"
	                android:background="@android:color/transparent"/>
	       	 </LinearLayout>
        </LinearLayout>
        <Button 
            android:id="@+id/btn_more_option"
            android:layout_marginTop="19dp"
            android:textSize="16dp"
            android:background="@xml/my_btn_ics"
            android:gravity="center"
            android:text="@string/string_btn_more_option"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        
        
        
    </LinearLayout>

    

</LinearLayout>
